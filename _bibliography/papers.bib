@inproceedings{penskoi2020hwaccel,
  title={Hardware Accelerator for System Dynamic Modeling},
  author={Aleksandr Penskoi and Ivan Perl},
  booktitle={The 2020 Conference of the System Dynamics Society},
  year={2020},
  organization={IEEE},
  abstract={System Dynamics (SD) was formed as a discipline that allows describing and modeling a continuous-time process in a simple and non-mathematician manner. SD models allow us to formalize and analyze examined processes, to predict a behavior of the complex dynamic system, to find problem areas, and to solve optimization problems by selecting coefficients and flow structure. It requires a significant amount of computation in a short time. The work proposes the hardware accelerator for SD modeling, which allows us to speed up a modeling process and real-time modeling significantly.},
